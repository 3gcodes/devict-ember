{{#my-modal title='Login' ok='login' close='removeModal'}}
  <form {{action 'ok' on='submit' target=view}} class="form-horizontal">
          <div class="form-group">
            <label class="sr-only" for="username">Username</label>
            <div class="col-sm-10">
            	{{input class="form-control" value=username placeholder="username"}}
        	</div>
          </div>
          <div class="form-group">
            <label class="sr-only" for="password">Username</label>
            <div class="col-sm-10">
            	{{input type="password" class="form-control" value=password placeholder="password"}}
        	</div>
          </div>
    </form>
{{/my-modal}}